---
import Layout from "../layouts/Layout.astro";
import MiFoto from "../assets/img/MiFoto.png";
import {
  FaLinkedinIn,
  FaGithub,
  FaXTwitter,
  FaInstagram,
} from "react-icons/fa6";

const links = [
  {
    href: "https://www.linkedin.com/in/gabriel-andreu-gimeno-ba674824a/",
    icon: FaLinkedinIn,
    label: "LinkedIn",
  },
  { href: "https://github.com/gabri98gim", icon: FaGithub, label: "GitHub" },
  { href: "https://x.com/gandreu8", icon: FaXTwitter, label: "Twitter" },
  {
    href: "https://www.instagram.com/gabri98gim/",
    icon: FaInstagram,
    label: "Instagram",
  },
];
---

<Layout>
  <section
    class="bg-custom flex min-h-screen flex-col items-center justify-center px-6 py-20"
  >
    <div class="mb-10 relative">
      <div class="relative flex items-center justify-center">
        <div class="absolute inset-0 rounded-full bg-[#2c77f2]/20 blur-xl">
        </div>
        <img
          src={MiFoto.src}
          alt="Foto de Gabri"
          class="border-2 border-[#2c77f2] h-32 w-32 rounded-full shadow-2xl object-cover object-[center_15%] relative z-10"
        />
      </div>
    </div>

    <div
      class="w-full max-w-2xl bg-white/80 dark:bg-slate-900/40 backdrop-blur-md p-8 rounded-2xl border border-gray-200 dark:border-white/10 shadow-2xl"
    >
      <h2
        class="text-3xl font-bold text-gray-900 dark:text-white mb-6 text-center"
      >
        Envíame un <span class="text-[#2c77f2]">Mensaje</span>
      </h2>

      <form
        action="https://formspree.io/f/mlgnnzjy"
        method="POST"
        class="space-y-5"
      >
        <div>
          <label
            class="block text-gray-600 dark:text-gray-400 text-sm font-medium mb-2"
            >Nombre</label
          >
          <input
            type="text"
            name="name"
            required
            class="w-full bg-gray-50 dark:bg-white/5 border border-gray-300 dark:border-white/10 rounded-xl px-4 py-3 text-gray-900 dark:text-white focus:outline-none focus:border-[#2c77f2] transition-colors"
            placeholder="Tu nombre"
          />
        </div>
        <div>
          <label
            class="block text-gray-600 dark:text-gray-400 text-sm font-medium mb-2"
            >Email</label
          >
          <input
            type="email"
            name="email"
            required
            class="w-full bg-gray-50 dark:bg-white/5 border border-gray-300 dark:border-white/10 rounded-xl px-4 py-3 text-gray-900 dark:text-white focus:outline-none focus:border-[#2c77f2] transition-colors"
            placeholder="tu@email.com"
          />
        </div>
        <div>
          <label
            class="block text-gray-600 dark:text-gray-400 text-sm font-medium mb-2"
            >Mensaje</label
          >
          <textarea
            name="message"
            rows="4"
            required
            class="w-full bg-gray-50 dark:bg-white/5 border border-gray-300 dark:border-white/10 rounded-xl px-4 py-3 text-gray-900 dark:text-white focus:outline-none focus:border-[#2c77f2] transition-colors"
            placeholder="¿En qué puedo ayudarte?"></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-[#2c77f2] hover:bg-[#6329b1] text-white font-bold py-4 rounded-xl shadow-lg shadow-[#2c77f2]/20 transition-all active:scale-95"
        >
          Enviar Mensaje
        </button>
      </form>

      <div class="relative my-10">
        <div class="absolute inset-0 flex items-center">
          <span class="w-full border-t border-gray-300 dark:border-white/10"
          ></span>
        </div>
        <div class="relative flex justify-center text-xs uppercase">
          <span class="bg-white/80 dark:bg-[#0f172a] px-3 text-gray-500 italic"
            >O hablemos por redes</span
          >
        </div>
      </div>

      <div class="flex justify-center gap-10">
        {
          links.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-500 dark:text-gray-400 hover:text-[#2c77f2] transition-all duration-300 hover:scale-125 group"
              aria-label={link.label}
            >
              <link.icon className="h-9 w-9 drop-shadow-sm group-hover:drop-shadow-[0_0_10px_rgba(120,54,207,0.6)]" />
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
