---
import {
  FaLinkedinIn,
  FaGithub,
  FaXTwitter,
  FaInstagram,
} from "react-icons/fa6";

const socialLinks = [
  {
    href: "https://www.linkedin.com/in/gabriel-andreu-gimeno-ba674824a/",
    icon: FaLinkedinIn,
    label: "LinkedIn",
  },
  { href: "https://github.com/gabri98gim", icon: FaGithub, label: "GitHub" },
  { href: "https://x.com/gandreu8", icon: FaXTwitter, label: "Twitter" },
  {
    href: "https://www.instagram.com/gabri98gim/",
    icon: FaInstagram,
    label: "Instagram",
  },
];
---

<footer
  class="mt-20 border-t border-gray-200 dark:border-white/5 bg-white dark:bg-black/20 py-12 backdrop-blur-md"
>
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      <div class="flex flex-col items-center md:items-start">
        <span
          class="text-2xl font-bold text-gray-900 dark:text-white tracking-tighter"
        >
          GAG<span class="text-[#2c77f2]">.</span>
        </span>
        <p class="text-gray-600 dark:text-gray-500 text-sm mt-2 font-medium">
          Filmmaker & Front-End Developer
        </p>
      </div>

      <div class="flex gap-6">
        {
          socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 dark:text-gray-400 hover:text-[#2c77f2] dark:hover:text-[#2c77f2] transition-all duration-300 hover:scale-110"
              aria-label={social.label}
            >
              <social.icon className="h-6 w-6" />
            </a>
          ))
        }
      </div>
    </div>

    <div
      class="mt-10 pt-8 border-t border-gray-200 dark:border-white/5 flex flex-col items-center gap-4"
    >
      <a
        href="mailto:gandreu8@gmail.com"
        class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors text-sm font-medium tracking-wide"
      >
        gandreu8@gmail.com
      </a>
      <p
        class="text-gray-500 dark:text-gray-600 text-[10px] uppercase tracking-[0.2em]"
      >
        © {new Date().getFullYear()} Gabriel Andreu • Hecho con Astro
      </p>
    </div>
  </div>
</footer>
