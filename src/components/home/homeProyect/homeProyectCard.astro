---
export interface Props {
  titulo: string;
  descripcion: string; // <-- Ahora sí aceptamos descripción
  imagen: string;
  tecnologias: string[];
  demo: string;
  codigo: string;
  index: number;
}

const { titulo, descripcion, imagen, tecnologias, demo, codigo } = Astro.props;
---

<div
  class="group relative flex w-full flex-col overflow-hidden rounded-2xl bg-white/50 dark:bg-slate-900/40 backdrop-blur-md border border-gray-200 dark:border-white/10 transition-all duration-500 hover:border-[#2c77f2]/50 hover:shadow-[0_0_30px_rgba(120,54,207,0.2)]"
>
  <div
    class="aspect-video w-full overflow-hidden border-b border-gray-200 dark:border-white/5"
  >
    <img
      src={imagen}
      alt={`Proyecto: ${titulo}`}
      class="h-full w-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
    />
  </div>

  <div class="flex flex-col grow p-8">
    <h3
      class="text-2xl font-bold mb-3 text-gray-900 dark:text-white group-hover:text-[#2c77f2] dark:group-hover:text-[#a27ed1] transition-colors"
    >
      {titulo}
    </h3>

    <div class="flex flex-wrap gap-2 mb-4">
      {
        tecnologias.map((tech) => (
          <span class="rounded-full bg-[#2c77f2]/10 border border-[#2c77f2]/20 text-[#2c77f2] dark:text-[#a27ed1] px-3 py-1 text-xs font-medium uppercase tracking-wider">
            {tech}
          </span>
        ))
      }
    </div>

    <p
      class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-8 line-clamp-3"
    >
      {descripcion}
    </p>

    <div class="mt-auto flex gap-4">
      <a
        href={demo}
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 bg-[#2c77f2] text-white py-3 rounded-xl text-sm font-bold hover:bg-[#6329b1] transition-all text-center shadow-lg shadow-[#2c77f2]/30"
      >
        Live Demo
      </a>

      <a
        href={codigo}
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 bg-gray-100 dark:bg-white/5 text-gray-900 dark:text-white border border-gray-300 dark:border-white/10 py-3 rounded-xl text-sm font-bold hover:bg-gray-200 dark:hover:bg-white/10 transition-all text-center"
      >
        GitHub
      </a>
    </div>
  </div>
</div>
