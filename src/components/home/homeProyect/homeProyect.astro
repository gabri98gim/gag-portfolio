---
import { proyectos } from "../../../data/projectData.js";
import ProyectCard from "./homeProyectCard.astro";
---

<section class="py-24 bg-black/20">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-center text-4xl md:text-5xl font-bold text-white mb-16">
      Proyectos <span
        class="text-[#7836cf] drop-shadow-[0_0_15px_rgba(120,54,207,0.3)]"
        >Destacados</span
      >
    </h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {
        proyectos
          .slice(0, 2)
          .map((proyecto, index) => <ProyectCard {...proyecto} index={index} />)
      }
    </div>
  </div>
</section>
